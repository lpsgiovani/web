---
// WebLayout.astro - Standalone layout mirroring BaseLayout.astro
import '../styles/globals.css';
import Analytics from '../components/web/Analytics.astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
}

const {
  title = "Primitiva — Desenvolvimento Web de Alta Performance",
  description = "Sites ultra-rápidos que convertem. Estratégia, Design e Código proprietário.",
  ogImage = "/assets/primitiva/thumb.jpg",
  canonical = Astro.url.pathname,
} = Astro.props;

const fullTitle = title.includes("Primitiva") ? title : `${title} | Primitiva`;
const siteUrl = "https://primitiva.cc";
---

<!DOCTYPE html>
<html lang="pt-BR" class="light scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, interactive-widget=resizes-content" />
    <meta name="theme-color" content="#ffffff" />
    
    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    
    <!-- Robots -->
    <meta name="robots" content="index, follow" />
    
    <!-- Canonical -->
    <link rel="canonical" href={`${siteUrl}${canonical}`} />
    
    <!-- Open Graph / Meta -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${ogImage}`} />
    
    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/favicon/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    
    <!-- Strategic Font Preloads -->
    <link rel="preload" href="/fonts/space-grotesk-normal-700.woff2" as="font" type="font/woff2" crossorigin="anonymous" fetchpriority="high" />
    <link rel="preload" href="/fonts/space-grotesk-normal-400.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/space-grotesk-normal-500.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/space-grotesk-normal-600.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/InstrumentSerif-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/InstrumentSerif-Italic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/space-mono-normal-400.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/space-mono-normal-700.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    
    <Analytics />

    <slot name="head" />

    <!-- Pure Original Logic from BaseLayout.astro -->
    <script src="../scripts/animations.js"></script>
  </head>
  <body class="antialiased bg-zinc-950 text-white font-display" transition:animate="fade">
    <slot />
    <ClientRouter />
    <SpeedInsights />
  </body>
</html>
