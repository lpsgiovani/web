---
// Contato - Contact page
import WebLayout from '../layouts/WebLayout.astro';
import ContactHeaderWeb from '../components/web/ContactHeaderWeb.astro';
import ContactChannels from '../components/astro/ContactChannels.astro';
import MinimalFooter from '../components/astro/MinimalFooter.astro';
import ContactOptions from '../components/react/ContactOptions';

import thumbImg from '../assets/primitiva/thumb.jpg?url';

// SEO metadata
const title = "Contato — Desenvolvimento Web de Alta Performance";
const description = "Fale com a Primitiva. Transforme sua presença digital com sites de ultra performance. Orçamentos para desenvolvimento web, engenharia de software e design estratégico.";
const canonical = "/contato/";
const ogImage = thumbImg;

// JSON-LD Structured Data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [{
    "@type": "ListItem",
    "position": 1,
    "name": "Home",
    "item": "https://dev.primitiva.cc"
  }, {
    "@type": "ListItem",
    "position": 2,
    "name": "Contato",
    "item": "https://dev.primitiva.cc/contato/"
  }]
};
---

<WebLayout title={title} description={description} canonical={canonical} ogImage={ogImage}>
  <main class="bg-background-light dark:bg-background-dark font-display antialiased text-[#181010] dark:text-[#f8f5f5] md:h-screen md:overflow-hidden md:flex md:flex-col">
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    
    <div class="md:h-[50vh] md:flex-shrink-0">
      <ContactHeaderWeb />
    </div>
    
    <div class="bg-black text-white min-h-[60vh] md:min-h-0 md:h-[50vh] border-b border-white/10 md:border-none md:flex md:flex-col md:justify-center relative">
      <div class="p-6 md:p-12 md:pr-24 w-full">
        <div class="flex flex-col md:grid md:grid-cols-12 md:gap-12">
          <!-- Contact Options (React Island for tracking) -->
          <ContactOptions client:visible />
          
          <!-- Static Contact Channels -->
          <ContactChannels />
        </div>
      </div>

      <!-- Discreet Footer -->
      <div class="w-full py-8 px-6 md:px-12 md:absolute md:bottom-0 md:left-0 flex justify-between items-end text-white/20 font-mono text-[9px] uppercase tracking-widest pointer-events-none select-none">
          <span>© 2026 Primitiva</span>
          <span>Build v1.0</span>
      </div>
    </div>
  </main>
</WebLayout>
