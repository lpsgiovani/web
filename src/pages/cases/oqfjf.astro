---
export const prerender = true;
import WebLayout from '../../layouts/WebLayout.astro';
import { Image } from 'astro:assets';

// Case Study Components
import ScrollingPrototype from '../../components/content/ScrollingPrototype.astro';

// Hardcoded Assets for OQFJF
import coverImage from '../../content/projetos/assets/oqfjf.webp';
import coverImageMobile from '../../assets/cover/oqfjf_responsive.webp';

const entry = {
  slug: "oqfjf",
  data: {
    title: "O que fazer em JF?",
    description: "A maior autoridade em curadoria urbana de Juiz de Fora, agora com uma plataforma proprietária de elite.",
    category: "Product Management & Engenharia",
    client: "O que fazer em JF?",
    year: "2024",
    techStack: ["NEXT.JS", "FIREBASE", "PWA"],
    challenge: "Transpor a conexão emocional do Instagram para um ecossistema escalável. Precisávamos de uma infraestrutura que suportasse o tráfego de uma comunidade massiva, garantindo carregamento instantâneo e uma lógica de navegação que priorizasse a curadoria humana.",
    outcome: "Mais do que um guia, estamos entregando a infraestrutura digital que sustenta a nova fase do OQFJF. O resultado é um produto que não apenas informa, mas monetiza e organiza a inteligência cultural da cidade."
  }
};

const title = `${entry.data.title} | Primitiva Cases`;
const description = entry.data.description;
---

<WebLayout title={title} description={description}>
    <fragment slot="head">
        <link rel="preload" href="/assets-dev/oqfjf/lottie/slider_oqfjf.lottie" as="fetch" type="application/json" crossorigin />
    </fragment>
    <script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script>
    <main class="bg-black min-h-screen text-white selection:bg-zinc-800 selection:text-white font-display">
        
        {/* Absolute Back Button */}
        <div class="absolute top-6 left-6 md:top-12 md:left-12 z-50 reveal-up pointer-events-auto">
            <a 
                href="/" 
                class="group flex items-center gap-3 bg-white/5 hover:bg-white/10 backdrop-blur-md border border-white/10 px-4 py-2 md:px-6 md:py-3 rounded-full transition-all duration-300 hover:border-white/30"
            >
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4 md:w-5 md:h-5 text-white transition-transform duration-300 group-hover:-translate-x-1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                </svg>
                <span class="font-mono text-[10px] md:text-xs uppercase tracking-[0.2em] text-white">Voltar</span>
            </a>
        </div>

        {/* 1. Hero Section */}
        <section class="h-screen flex flex-col relative bg-[#1a1a1a] overflow-hidden">
             
             {/* Background Image */}
             <div class="absolute inset-0 z-0">
                 <Image 
                    src={coverImage}
                    alt="O Que Fazer em JF Cover"
                    class="hidden md:block w-full h-full object-cover opacity-60 mix-blend-overlay"
                 />
                 <Image 
                    src={coverImageMobile}
                    alt="O Que Fazer em JF Cover Mobile"
                    class="block md:hidden w-full h-full object-cover opacity-60 mix-blend-overlay"
                 />
                 <div class="absolute inset-0 bg-purple-950/30 mix-blend-multiply"></div>
                 <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent"></div>
             </div>

             {/* Main Content Wrapper */}
             <div class="absolute inset-0 z-20 flex flex-col justify-end pointer-events-none">
                 
                 {/* Title Section */}
                 <div class="px-6 md:px-12 pb-12 w-full">
                     <div class="flex flex-col gap-6 reveal-up">
                         <div class="flex items-center gap-3">
                             <div class="w-1.5 h-1.5 rounded-full bg-white"></div>
                             <span class="font-bold text-xs md:text-sm tracking-[0.2em] uppercase text-white/90">
                                 {entry.data.category}
                             </span>
                         </div>
                         
                         <h1 class="text-[clamp(3.5rem,10vw,10rem)] leading-[0.9] font-black tracking-tighter uppercase text-white drop-shadow-2xl">
                             O QUE FAZER<br/>EM JF?
                         </h1>
                     </div>
                 </div>

                 {/* Technical Grid (Fixed at Bottom) */}
                 <div class="w-full border-t border-white/20 bg-black/60 backdrop-blur-md pointer-events-auto">
                    <div class="grid grid-cols-2 md:grid-cols-4 divide-x divide-y md:divide-y-0 divide-white/10">
                        <div class="p-4 md:p-6 flex flex-col gap-1 reveal-up">
                            <span class="font-mono text-[9px] uppercase tracking-widest text-zinc-400">ANO</span>
                            <span class="font-mono text-xs text-white font-bold uppercase">{entry.data.year}</span>
                        </div>
                        <div class="p-4 md:p-6 flex flex-col gap-1 reveal-up delay-100">
                             <span class="font-mono text-[9px] uppercase tracking-widest text-zinc-400">STACK</span>
                             <span class="font-mono text-xs text-white font-bold uppercase">{entry.data.techStack.join(' + ')}</span>
                        </div>
                    </div>
                 </div>
             </div>
        </section>

        {/* 2. ESTRATÉGIA: O Conceito */}
        <section class="border-b border-zinc-900 bg-zinc-950">
             <div class="grid grid-cols-1 md:grid-cols-2">
                 <div class="hidden md:block relative aspect-[3/4] md:aspect-auto md:h-full overflow-hidden border-r border-zinc-900 reveal-img">
                     <Image 
                        src="/assets-dev/oqfjf/asset2.webp" 
                        alt="O Que Fazer em JF Detail"
                        width={1200}
                        height={1600}
                        class="w-full h-full object-cover"
                     />
                 </div>
                 
                 <div class="p-8 md:p-24 flex flex-col justify-center reveal-up delay-100">
                     <span class="font-mono text-xs text-zinc-500 uppercase tracking-widest mb-8">01 — ESTRATÉGIA</span>
                     <h2 class="text-4xl md:text-6xl font-display font-bold text-white mb-8 leading-[1.1]">
                        Diversidade como<br/> ponto de partida
                     </h2>
                     <p class="font-serif text-zinc-400 leading-relaxed text-xl mb-12 max-w-lg">
                        Antes de qualquer linha de código, projetamos um ecossistema visual que suportasse a magnitude do projeto. O Que Fazer em JF não é apenas um guia, é um ponto de encontro. 
                        <br/><br/>
                        O desafio era traduzir a diversidade infinita de Juiz de Fora — dos rolês alternativos aos clássicos — em uma linguagem que conversasse com todos os públicos, sem distinções.
                     </p>
                     <div class="flex gap-16 border-t border-zinc-800 pt-12">
                         <div>
                             <span class="block text-4xl font-bold font-display text-white">140k+</span>
                             <span class="text-xs font-mono text-zinc-500 uppercase mt-2 block">Seguidores</span>
                         </div>
                         <div>
                             <span class="block text-4xl font-bold font-display text-white">100+</span>
                             <span class="text-xs font-mono text-zinc-500 uppercase mt-2 block">Parceiros</span>
                         </div>
                     </div>
                 </div>
             </div>
        </section>

        {/* 3. IDENTIDADE VISUAL: Criação & Capitur */}
        <section class="border-b border-zinc-900 bg-black">
             <div class="grid grid-cols-1 md:grid-cols-2">
                 <div class="py-20 px-8 md:p-32 flex flex-col justify-center border-r border-zinc-900 order-2 md:order-1 reveal-up">
                     <span class="font-mono text-xs text-zinc-500 uppercase tracking-widest mb-8">02 — IDENTIDADE VISUAL</span>
                     <h2 class="text-4xl md:text-6xl font-display font-bold text-white mb-8 leading-[1.1]">
                        Psicodelia Moderna<br/> e Boas-Vindas
                     </h2>
                     <p class="font-sans text-zinc-500 max-w-md leading-relaxed mb-12">
                        Unimos a estética vibrante e as formas fluidas do psicodélico dos anos 70 a uma releitura moderna e limpa. Essa explosão de cores representa a pluralidade da cidade: queríamos deixar claro que, no "O Que Fazer", todos são bem-vindos. É o design que abraça a todos e mostra, de forma autêntica, realmente tudo o que JF tem a oferecer.
                     </p>
                     
                     <div class="reveal-up delay-200">
                         <a 
                             href="https://primitiva.cc/projetos/oqfjf" 
                             target="_blank"
                             class="inline-flex items-center gap-3 bg-white/5 hover:bg-white/10 backdrop-blur-md border border-white/10 px-5 py-2.5 rounded-full transition-all duration-300 hover:border-white/30 group"
                         >
                             <span class="font-mono text-[10px] uppercase tracking-[0.2em] text-white/70 group-hover:text-white">Ver sobre o projeto de identidade</span>
                             <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3.5 h-3.5 text-white/50 transition-transform duration-300 group-hover:translate-x-1 group-hover:text-white">
                                 <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                             </svg>
                         </a>
                     </div>
                 </div>

                 <div class="relative w-full h-full bg-zinc-900/20 order-1 md:order-2 reveal-img border-b md:border-b-0 border-zinc-900 min-h-[500px] md:min-h-auto">
                     {/* Desktop: Asset 1 stays here on desktop */}
                     <Image 
                        src="/assets-dev/oqfjf/asset1.webp" 
                        alt="O Que Fazer em JF Branding"
                        width={1200}
                        height={1600}
                        class="hidden md:block w-full h-full object-cover"
                     />
                     {/* Mobile: Asset 2 moved to this slot on mobile */}
                     <Image 
                        src="/assets-dev/oqfjf/asset2.webp" 
                        alt="O Que Fazer em JF Detail"
                        width={1200}
                        height={1600}
                        class="block md:hidden w-full h-full object-cover"
                     />
                 </div>
             </div>
        </section>

        {/* Mobile-only Second Image (Asset 1) position between Sections 02 and 03 */}
        <div class="block md:hidden w-full aspect-[3/4] overflow-hidden bg-zinc-900 reveal-img border-b border-zinc-900">
             <Image 
                src="/assets-dev/oqfjf/asset1.webp" 
                alt="O Que Fazer em JF Branding"
                width={1200}
                height={1600}
                class="w-full h-full object-cover"
             />
        </div>

        {/* 4. O DESAFIO DIGITAL */}
        <section class="border-b border-zinc-900 bg-zinc-950/50">
            <div class="grid grid-cols-1 md:grid-cols-12 min-h-[400px]">
                <div class="md:col-span-4 p-8 md:p-24 border-r border-zinc-900 bg-zinc-900/30">
                    <span class="font-mono text-xs text-zinc-500 uppercase tracking-widest sticky top-32 block reveal-up">
                        03 — O DESAFIO DIGITAL
                    </span>
                </div>
                
                <div class="md:col-span-8 p-8 md:p-24 flex items-center reveal-up delay-100">
                     <p class="text-2xl md:text-4xl leading-relaxed font-serif text-white text-balance">
                        {entry.data.challenge}
                     </p>
                </div>
            </div>
        </section>

         {/* Showcase Lottie - Only Desktop here */}
        <section class="hidden md:block w-full h-[60vh] md:h-[80vh] bg-zinc-950 border-b border-zinc-900 relative overflow-hidden">
             <dotlottie-player
                src="/assets-dev/oqfjf/lottie/slider_oqfjf.lottie"
                background="transparent"
                speed="1"
                loop
                autoplay
                class="w-full h-full object-cover scale-110"
                style="width: 100%; height: 100%; object-fit: cover;"
             ></dotlottie-player>
        </section>

        {/* 04. DESENVOLVIMENTO & SOLUÇÕES */}
        <section class="border-b border-zinc-900 bg-black text-white">
            <div class="p-8 md:p-24 border-b border-zinc-900">
                <span class="font-mono text-xs text-zinc-500 uppercase tracking-widest block mb-16 reveal-up">
                    04 — DESENVOLVIMENTO
                </span>

                <ul class="grid grid-cols-1 md:grid-cols-2 gap-12 list-none reveal-up delay-100">
                    <li class="border-t border-zinc-800 pt-8">
                        <div class="flex items-center gap-4 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-8 h-8 text-zinc-500 hidden md:block shrink-0">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
                            </svg>
                            <strong class="text-white text-xl font-mono uppercase">Busca por Experiência</strong>
                        </div>
                        <p class="text-zinc-400 text-lg leading-relaxed">Taxonomia inteligente onde o usuário filtra por "Date", "Família" ou "Pet-friendly", em vez de apenas tipos de comida. Lógica de busca resiliente e rápida.</p>
                    </li>
                    <li class="border-t border-zinc-800 pt-8">
                        <div class="flex items-center gap-4 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-8 h-8 text-zinc-500 hidden md:block shrink-0">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5l4.72-4.72a.75.75 0 011.28.53v11.38a.75.75 0 01-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 002.25-2.25v-9a2.25 2.25 0 00-2.25-2.25h-9A2.25 2.25 0 002.25 7.5v9a2.25 2.25 0 002.25 2.25z" />
                            </svg>
                            <strong class="text-white text-xl font-mono uppercase">Curadoria High-Fidelity</strong>
                        </div>
                        <p class="text-zinc-400 text-lg leading-relaxed">Sistema de preview de vídeos curtos otimizados e área dedicada a dicas exclusivas, garantindo uma experiência de consumo ultra-rápida.</p>
                    </li>
                    <li class="border-t border-zinc-800 pt-8">
                        <div class="flex items-center gap-4 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-8 h-8 text-zinc-500 hidden md:block shrink-0">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                            </svg>
                            <strong class="text-white text-xl font-mono uppercase">Core Tecnológico</strong>
                        </div>
                        <p class="text-zinc-400 text-lg leading-relaxed">Reconstrução total em Next.js para performance extrema e SEO. Infraestrutura escalável pronta para picos de tráfego de toda a cidade.</p>
                    </li>
                    <li class="border-t border-zinc-800 pt-8">
                        <div class="flex items-center gap-4 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-8 h-8 text-zinc-500 hidden md:block shrink-0">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 14.15v4.25c0 .621-.504 1.125-1.125 1.125H4.875A1.125 1.125 0 013.75 18.4V14.15m16.5 0a2.25 2.25 0 00-2.25-2.25H4.875a2.25 2.25 0 00-2.25 2.25m16.5 0V8.25a2.25 2.25 0 00-2.25-2.25H4.875A2.25 2.25 0 002.625 8.25V14.15M12 15.75h.008v.008H12v-.008z" />
                            </svg>
                            <strong class="text-white text-xl font-mono uppercase">Ecossistema B2B</strong>
                        </div>
                        <p class="text-zinc-400 text-lg leading-relaxed">Área logada para parceiros com gestão de cupons, favoritos e integração de faturamento automatizado, monetizando a influência.</p>
                    </li>
                </ul>
            </div>

            {/* Showcase Lottie - Mobile positioned after development */}
            <div class="block md:hidden w-full h-[60vh] bg-zinc-950 border-b border-zinc-900 relative overflow-hidden">
                 <dotlottie-player
                    src="/assets-dev/oqfjf/lottie/slider_oqfjf.lottie"
                    background="transparent"
                    speed="1"
                    loop
                    autoplay
                    class="w-full h-full object-cover scale-110"
                    style="width: 100%; height: 100%; object-fit: cover;"
                 ></dotlottie-player>
            </div>

        {/* 05. RESULTADOS */}
        {entry.data.outcome && (
            <section id="next-section" class="border-b border-zinc-900 bg-zinc-950/30">
                <div class="grid grid-cols-1 md:grid-cols-12 min-h-[400px]">
                    <div class="md:col-span-4 p-8 md:p-12 border-r border-zinc-900">
                        <span class="font-mono text-xs text-zinc-500 uppercase tracking-widest sticky top-32 block reveal-up">
                            05 — RESULTADOS
                        </span>
                    </div>
                    <div class="md:col-span-8 p-8 md:p-24 flex items-center reveal-up delay-100">
                        <p class="text-2xl md:text-5xl font-mono leading-relaxed text-white">
                            "{entry.data.outcome}"
                        </p>
                    </div>
                </div>
            </section>
        )}

        {/* Next Level CTA Footer */}
        <section class="relative w-full h-[60vh] md:h-[80vh] overflow-hidden group border-t border-zinc-900 bg-black">
             <a href="/briefing" class="absolute inset-0 z-20"></a>
             
             <div class="absolute inset-0 z-0 text-white/5 pointer-events-none flex items-center justify-center overflow-hidden">
                <span class="text-[30vw] font-black uppercase tracking-tighter opacity-10 blur-sm">PRIMITIVA</span>
             </div>

             <div class="absolute inset-0 z-0">
                 <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-purple-950/20 via-transparent to-transparent opacity-50 group-hover:opacity-80 transition-opacity duration-700"></div>
                 <div class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors duration-700"></div>
             </div>
             
             <div class="absolute inset-0 flex flex-col items-start justify-center z-10 p-8 md:p-12 lg:p-24 pointer-events-none">
                 <span class="font-mono text-[10px] md:text-xs uppercase tracking-[0.5em] text-zinc-500 mb-8 transition-colors bg-white/5 px-4 py-2 border border-white/10 rounded-full group-hover:text-white group-hover:border-white/30">
                    PRÓXIMO PROJETO
                 </span>
                 <h2 class="font-display font-black text-[20vw] md:text-[15vw] text-white uppercase tracking-tighter leading-[0.8] mb-12 transition-transform duration-700 group-hover:scale-[1.02]">
                      O SEU.
                 </h2>
                 <div class="flex items-center gap-6 group-hover:translate-x-4 transition-transform duration-500">
                    <span class="bg-white text-black px-8 py-4 md:px-12 md:py-6 text-lg md:text-2xl font-bold uppercase tracking-tighter">
                        [AGENDAR ANÁLISE DE PROJETO]
                    </span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8 text-white hidden md:block">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                 </div>
             </div>
        </section>

    </main>
</WebLayout>

<script>
    // Animation Observer
    const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('active');
            }
        });
    }, observerOptions);

    document.addEventListener('astro:page-load', () => {
        const elements = document.querySelectorAll('.reveal-up, .reveal-text, .reveal-img, .line-grow');
        elements.forEach(el => observer.observe(el));
    });
</script>
