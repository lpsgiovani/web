---
// HeaderWeb.astro - System Window Hero Design
import HeaderStatusLine from '../web/HeaderStatusLine';
---

<header class="relative bg-black text-white h-[100svh] flex flex-col p-6 md:p-12 border-b border-zinc-900 overflow-hidden">
  
  {/* System Header Bar */}
  <div class="w-full max-w-4xl md:max-w-none mx-auto md:mx-0 border-b border-zinc-900 bg-black px-2 md:px-0 py-3 flex items-center justify-between reveal-up active z-50 mb-4 md:mb-0">
    
    {/* Logo + System Log */}
    <div class="flex items-center gap-4">
      <a href="/">
        <img 
          src="/assets/primitiva/primitiva_logo.svg" 
          alt="Logo Primitiva" 
          class="h-5 w-auto"
          fetchpriority="high" 
          width="100" 
          height="20" 
        />
      </a>
      <span class="font-mono text-[10px] text-zinc-600 uppercase tracking-widest hidden md:inline-block">
        V1.0 // JF_BR
      </span>
    </div>

    {/* Navigation */}
    <nav class="flex items-center gap-4 md:gap-8">
      <a 
        href="#about"
        class="group flex items-center gap-1 font-mono text-[10px] md:text-xs font-bold tracking-wider uppercase text-zinc-400 hover:text-white transition-colors cursor-pointer"
      >
        <span class="text-zinc-600 group-hover:text-white transition-colors">[01]</span>
        <span>SOBRE</span>
      </a>

      <a 
        href="/contato"
        class="group flex items-center gap-2 font-mono text-[10px] md:font-display md:text-xs font-bold tracking-wider uppercase text-white md:border md:border-zinc-800 md:rounded md:bg-zinc-900/50 px-0 md:px-3 py-1.5 hover:border-zinc-600 transition-colors cursor-pointer"
      >
        <span class="text-zinc-500 group-hover:text-white transition-colors">[02]</span>
        <span>CONTATO</span>
        <span class="relative flex h-2 w-2 ml-1">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
        </span>
      </a>
    </nav>
  </div>

  <div class="flex-1 flex flex-col justify-center items-center w-full min-h-0 relative z-10">
      
      {/* System Window Container */}
      <div class="w-full max-w-4xl bg-zinc-950/50 border border-zinc-800 rounded-xl overflow-hidden shadow-2xl reveal-up duration-1000 transform translate-y-10 group hover:border-zinc-700 transition-colors">
          
          {/* macOS Style Header */}
          <div class="bg-zinc-900/80 border-b border-zinc-800 h-10 flex items-center px-4 gap-2">
              <div class="flex gap-2">
                  <div class="w-3 h-3 rounded-full bg-[#ff5f57] border border-black/10"></div>
                  <div class="w-3 h-3 rounded-full bg-[#febc2e] border border-black/10"></div>
                  <div class="w-3 h-3 rounded-full bg-[#28c840] border border-black/10"></div>
              </div>
              <div class="flex-1 text-center">
                  <span class="font-mono text-[10px] text-zinc-600 uppercase tracking-widest opacity-60">cmd://run_hero_sequence</span>
              </div>
          </div>

          {/* Content Area */}
          <div class="p-8 md:p-12 lg:p-16 flex flex-col gap-2">
              <h2 class="font-display font-medium text-1xl md:text-4xl text-zinc-500 reveal-up delay-300">
                  TENHA O SITE QUE SEU
              </h2>
              <h1 class="font-display font-black text-4xl md:text-6xl lg:text-7xl leading-[0.9] tracking-tighter text-white uppercase reveal-up delay-500 text-shadow-glow">
                  CONCORRENTE <br />
                  N√ÉO PODE TER.
              </h1>
          </div>
      </div>

      {/* Technical Status Line Typewriter */}
      <div class="mt-6 flex w-full max-w-4xl px-2 h-auto md:h-6 items-center min-h-[1.5rem]">
          <HeaderStatusLine client:visible />
      </div>

  </div>
</header>

<style>
    .text-shadow-glow {
        text-shadow: 0 0 40px rgba(255,255,255,0.1);
    }
</style>
