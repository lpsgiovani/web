---
import { Image } from 'astro:assets';

interface Props {
  images: ImageMetadata[];
  columns?: number;
  gap?: string;
  title?: string;
}

const { images, columns = 2, gap = "gap-4", title = "INTERFACE_GRID_v2" } = Astro.props;

const gridCols = columns === 3 ? "md:grid-cols-3" : columns === 4 ? "md:grid-cols-4" : "md:grid-cols-2";
---

<div class="my-24 w-full">
    <div class="flex items-center justify-between mb-8 pb-4 border-b border-zinc-900 reveal-up">
        <span class="font-mono text-[10px] text-zinc-500 tracking-widest uppercase">{title}</span>
        <div class="flex gap-1">
            <div class="w-1.5 h-1.5 rounded-full bg-zinc-800"></div>
            <div class="w-1.5 h-1.5 rounded-full bg-zinc-800"></div>
            <div class="w-1.5 h-1.5 rounded-full bg-zinc-500"></div>
        </div>
    </div>

    <div class={`grid grid-cols-1 ${gridCols} ${gap}`}>
        {images.map((img, index) => (
            <div 
                class="relative aspect-[4/3] md:aspect-square overflow-hidden rounded-sm bg-zinc-950 group reveal-up"
                style={`transition-delay: ${index * 100}ms`}
            >
                <Image 
                    src={img} 
                    alt={`Interface Preview ${index + 1}`}
                    class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
                />
                <div class="absolute inset-0 border border-white/5 pointer-events-none group-hover:border-white/20 transition-colors"></div>
                
                {/* Micro-label */}
                <div class="absolute bottom-4 left-4 font-mono text-[8px] text-zinc-500 bg-black/60 px-2 py-1 backdrop-blur-sm opacity-0 group-hover:opacity-100 transition-opacity">
                    IMG_REF_{String(index + 1).padStart(2, '0')}
                </div>
            </div>
        ))}
    </div>
</div>
